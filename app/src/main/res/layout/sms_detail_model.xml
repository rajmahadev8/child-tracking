<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sms_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="2">

    <TextView
        android:id="@+id/sms_detail_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="datetime"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="start" />

    <LinearLayout
        android:id="@+id/toTheLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/sms_detail_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_msg"
            android:breakStrategy="balanced"
            android:padding="8dp"
            android:text="incoming"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sms_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="type"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toTheRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible"
        android:gravity="end"
        >

        <TextView
            android:id="@+id/sms_detail_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="type"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sms_detail_body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_msg"
            android:breakStrategy="balanced"
            android:padding="8dp"
            android:text="incoming"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="end"/>

    </LinearLayout>
</LinearLayout>

